.full-item__item-wrapper
	.full-item__item-gallery-wrapper
		.swiper-container.gallery-top
			.swiper-wrapper
				each item in [1,2,3,4,5,6]
					a.swiper-slide.image-popup-no-margins(style='background-image:url(/img/originals/#{item}.jpg)', href="/img/originals/#{item}.jpg")
						img(src="/img/originals/#{item}.jpg", width="380", height="370")

			// Add Arrows
			.swiper-button-next.swiper-button-white
			.swiper-button-prev.swiper-button-white
		.swiper-container.gallery-thumbs
			.swiper-wrapper
				each item in [1,2,3,4,5,6]
					a.swiper-slide(style='background-image:url(/img/originals/#{item}.jpg)')

